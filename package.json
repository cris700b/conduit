{
  "name": "conduit-angularjs",
  "version": "1.0.0",
  "description": "Angular frontend for Conduit",
  "author": "Thinkster",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cris700b/conduit.git"
  },
  "bugs": {
    "url": "https://github.com/cris700b/conduit/issues"
  },
  "homepage": "https://github.com/cris700b/conduit#readme",
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "concat": "0.0.1-security",
    "insert": "^1.0.1",
    "jshint": "^2.9.2",
    "npm-run-all": "^2.3.0",
    "pug": "^2.0.0-beta3"
  },
  "scripts": {
    "clean:build": "if exist build rd /S /Q build",
    "clean:dist": "if exist dist rd /S /Q dist",
    "cmd-clean": "run-p clean:*",
    "lint": "jshint src",
    "preconcat-mixins": "if not exist build mkdir build && if not exist build\\mixins mkdir build\\mixins",
    "concat-mixins": "concat-cli -f src\\mixins -o build\\mixins\\jade_components.jade",
    "insert": "",
    "prepug": "run-all cmd-clean -s concat-mixins insert",
    "pug": "pug src --pretty -o build",
    "browser-sync": "browser-sync start --server dist --port 4000 --no-notify --ui-port 4001 --files dist",
    "presrv": "run-p lint pug",
    "srv": "browser-sync"
  }
}
